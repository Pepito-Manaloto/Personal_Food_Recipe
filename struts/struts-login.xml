<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="login" namespace="/" extends="loggedIn">

        <action name="userLogin" class="com.aaron.recipe.web.action.LoginAction">
            <result name="*" type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">responseStream</param>
            </result>
        </action>

        <action name="login" class="com.aaron.recipe.web.action.LoginAction" method="forward">
            <result name="success">/WEB-INF/jsp/login.jsp</result>
        </action>

    </package>
</struts>